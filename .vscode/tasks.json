{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "flatbuf",
            "command": "flatc",
            "args": [
                "--cpp",
                "-o",
                "${workspaceFolder}/src/common/include/template_project/flatbuffers",
                "${workspaceFolder}/src/common/*.fbs"
            ]
        },
        {
            "type": "shell",
            "label": "cmake_pre",
            "command": "cmake",
            "args": [
                "-B build",
                "-G Ninja",
                // "-DCMAKE_C_COMPILER=/usr/bin/clang",
                // "-DCMAKE_CXX_COMPILER=/usr/bin/clang++",
                "-DCMAKE_C_COMPILER=/usr/local/bin/gcc",
                "-DCMAKE_CXX_COMPILER=/usr/local/bin/g++",
                "-DCMAKE_INSTALL_PREFIX=/tmp/template_project",
                "-DCMAKE_BUILD_TYPE=Debug",
                // "-DCMAKE_BUILD_TYPE=Release",
                // "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DBASIC_USE_MOLD=ON",
                // "-DBUILD_SHARED_LIBS=ON",
                "-DBASIC_STATIS_LIBCXX=ON",
                // "-DBASIC_STATIC_EXTERNAL_LIB=OFF"
                // "-DBASIC_INSTALL_STATIC_LIB=ON",
                // "-DCMAKE_VERBOSE_MAKEFILE=ON", // 打印详细信息
            ]
        },
        {
            "type": "shell",
            "label": "cmake_next",
            "command": "time",
            "args": [
                "cmake",
                "--build",
                "build",
                "-j$(nproc)",
                // "1>./build/info.log",
                // "2>./build/warning.log",
            ]
        },
        {
            "label": "build",
            "dependsOrder": "sequence", // 按列出的顺序执行任务依赖项
            "dependsOn": [
                // "flatbuf",
                "cmake_pre",
                "cmake_next",
            ]
        }
    ]
}
